default_columns=[
    'shear_index',
    'mcal_g',
    'mcal_gpsf',
    'mcal_R',
    'mcal_Rpsf',
    'mcal_dt_Rnoise',
    'mcal_dt_Rnoise_psf',
]

cache_columns=[
    'shear_index',
    'pars',
    's2n_r',
    'mcal_g',
    'mcal_gpsf',
    'mcal_R',
    'mcal_Rpsf',
    'mcal_dt_Rnoise',
