def read_data(conf, dt_index=None, cache=False):

    if cache:
        return read_cached_data(conf, dt_index=dt_index)

    chunksize=1000000

    columns=[
        'shear_index',
        'mcal_g',
        'mcal_gpsf',
        'mcal_R',
        'mcal_Rpsf',
        'mcal_dt_Rnoise',
        'mcal_dt_Rnoise_psf',
    ]

    return nsim.files.read_output(conf['run'], 0, columns=columns)

    '''
    fname=files.get_output_url(conf['run'], 0, 0)
    with fitsio.FITS(fname) as fits:
